{
  "version": 2,
  "name": "mars-rover-mission-control",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server-vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server-vercel.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "env": {
    "NASA_API_KEY": "@nasa-api-key"
  },
  "functions": {
    "backend/server-vercel.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "installCommand": "cd backend && pip install -r requirements-vercel.txt && cd ../frontend && yarn install"
}