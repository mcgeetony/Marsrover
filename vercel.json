{
  "version": 2,
  "name": "mars-rover-mission-control",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "env": {
    "NASA_API_KEY": "@nasa-api-key"
  },
  "functions": {
    "backend/server.py": {
      "maxDuration": 30
    }
  }
}